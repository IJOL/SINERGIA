<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>


<!--AddressBook_conf Form View-->
    <record model="ir.ui.view" id="view_sale_config_settings">
	<field name="name">addressbook.form</field>
	<field name="model">addressbook.conf</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <form string="Remote Asterisk conf">
                    <field name="name"/>
                    <field name="connector"/>
                    <field name="conn_string"/>
                    <field name="password" password="True"/>
                    <button name="connection_test" string="Test Connection"
                            type="object" icon="gtk-network"/>

        </form>
	</field>
   </record>



    <record model="ir.ui.view" id="addressbook_conf_tree_view">
        <field name="name">addressbook.tree</field>
        <field name="model">addressbook.conf</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Configuration">
       		<field name="name" />
            <field name="connector"/>
            <field name="conn_string"/>
             </tree>
        </field>
   </record>

<!-- Addressbook.conf form action -->
<record model="ir.actions.act_window" id="addressbook_conf_form">
        <field name="name">New Config</field>
	<field name="res_model">addressbook.conf</field>
	<field name="view_type">form</field>
	<field name="view_mode">tree,form</field>
</record>


<!--MENUS-->

     <menuitem id="menu_asterisk_addressbook_config" name="Asterisk Sync" parent="base.menu_config_address_book"
            sequence="1" action="addressbook_conf_form"/>

 </data>
</openerp>