<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="act_to_be_validate" model="workflow.activity">
        <field name="wkf_id" ref="stock.wkf_picking"/>
        <field name="name">to_be_validate</field>
        <field name="kind">function</field>
        <field name="action">write({'state':'to_be_validate'})</field>
    </record>

      <record id="trans_validated" model="workflow.transition">
            <field name="act_from" ref="stock.act_confirmed"/>
            <field name="act_to" ref="act_to_be_validate"/>
            <field name="signal">button_validate</field>
        </record>


      <!--New Buton VALIDATE -->

     <record id="view_picking_inherit_form" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <form string="Internal Picking List" version="7.0">
                <header>
                    <button name="button_validate" states="to_be_validate" string="Validate" type="object" class="oe_highlight" groups="sine_stock_priority.group_stock_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="to_be_validate" statusbar_colors='{"to_be_validate":"yellow"}'/>
                </header>
        </form>
        </field>
        </record>

   </data>
 </openerp>
