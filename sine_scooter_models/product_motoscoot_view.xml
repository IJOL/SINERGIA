<?xml version="1.0" encoding="utf-8"?>
<openerp>
 <data>

    <record model="ir.ui.view" id="product_motoscoot_form_view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
		<notebook position="inside">
			<page string="Modelos Asociados">
			<separator string="Modelos Scooter" colspan="4" />
                <field name="scooters_ids" colspan="4" ></field>
             <separator string="Copy Fitments" colspan="4" />
                <field name="select_origin"  colspan="4" select="1"/>
                <button name="copy_fitments" string="Copy Fitments" type="object" class="oe_highlight"/>

            </page>
		</notebook>
            </field>
   </record>


     <!-- Buscador de marcas -->

    <record model="ir.ui.view" id="scooter_model_filter">
        <field name="name">scooter.search</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view" />
        <field name="type">search</field>
        <field name="arch" type="xml">
            <xpath expr="filter[@string='Services']" position="after">
                <filter name="type" string="Tipo Moto" domain="[('scooters_ids.type','in', 'scooters_ids')]"/>
                <filter  name="brand_id" string="Fabricante" domain="[('scooters_ids.brand_id.brand','in', 'scooters_ids')]"/>
                <filter name ="model_id" string="Modelo" domain="[('scooters_ids.model_id.model','in', 'scooters_ids')]"/>
            </xpath>

        </field>
    </record>
 </data>
</openerp>


